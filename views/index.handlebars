<div class="row">
    <div class="col-6">
        <h2>My Bucket List <button class="add-item-btn btn btn-primary">Add</button></h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Activity</th>
                    <th scope="col">Deadline</th>
                    <th scope="col">Mark Complete</th>
                </tr>
            </thead>
            <tbody>
                {{#each myitems}}
                {{#unless completed}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{activityDescription}}</td>
                    <td>{{completeByDate}}</td>
                    <td><button data-id="{{activityID}}" class="complete more-margin list-btn btn btn-success btn-sm">complete!</button> <button data-id="{{activityID}}" class="find-friend more-margin list-btn btn btn-sm btn-dark">Find a Friend!</button></td>
                </tr>
                {{/unless}}
                {{/each}}
            </tbody>
        </table>
        <br>
        <hr>
        <h2>Completed Items</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Activity</th>
                    <th scope="col">Completion Date</th>
                </tr>
            </thead>
            <tbody>
                {{#each myitems}}
                {{#if completed}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{activityDescription}}</td>
                    <td>{{completedOnDate}}</td>
                </tr>
                {{/if}}
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="col-6">
        <h2>Popular Bucket List Items</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Activity</th>
                    <th scope="col">#People with this activity</th>
                </tr>
            </thead>
            <tbody>
                {{#each topitems}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{activityDescription}}</td>
                    <td>{{count}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div id="results-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" style="display: inline-block">
            <div class="modal-header">
                <h2 class="modal-title"><strong>New Bucket List Item</strong></h2>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Activity</label>
                        <input id="item-input" type="text" class="form-control" placeholder="Activity Description" onfocus="this.placeholder = ''">
                        <label for="exampleInputEmail1">Complete By</label>
                        <input type="text" id="datepicker" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Deadline" onfocus="this.placeholder = ''">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Category</label>
                        <select id="category-select">
                            <option>Activity</option>
                            <option>Education</option>
                            <option>Entertainment</option>
                            <option>Social</option>
                            <option>Travel</option>
                        </select>
                    </div>
                    <button id="new-item-submit" type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="friends-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" style="display: inline-block">
            <div class="modal-header">
                <h2 class="modal-title"><strong>Nearby Friends</strong></h2>
            </div>
            <div class="modal-body">
                <form>
                    <div>
                        <ul id="friends">

                        </ul>
                    </div>
                    <button id="friends-modal-close-btn" type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="contact-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" style="display: inline-block">
            <div class="modal-header">
                <h2 class="modal-title"><strong>Contact a Bestie</strong></h2>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">To:</label>
                        <input id="to-friend" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Message:</label>
                        <br>
                        <textarea></textarea>
                    </div>
                    <button id="new-item-submit" type="submit" class="btn btn-primary">Send</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>